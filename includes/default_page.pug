mixin head(title)
    title= title
    meta(charset="utf-8")
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='css/bootstrap.min.css' rel='stylesheet')
    link(href='css/font-awesome.min.css' rel='stylesheet')
    link(href='css/style.css' rel='stylesheet')
    script(src='https://unpkg.com/vue@2.4.1')
    script(src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js")
    link(rel="icon" href="media/icon.ico")

mixin header(title)
  .jumbotron.text-center
    h1= title
        
mixin particles()
  script.
    particlesJS.load('particles', 'media/particles.json', function() {
      console.log('callback - particles.js config loaded');
    });

mixin footer()
  .footer
    p.text-center.top-10 &copy 2017 Angel Ruiz-Bates
    +icons

mixin navvy(index)
    -
        var pages = [ 'Home', 'Articles', 'About'];
        var urls = [ '/', '/articlelist', '/about' ];  
    nav(class='navbar navbar-toggleable-md navbar-inverse bg-faded mb-4 justify-content-end')
      a.navbar-item.mr-auto.ml-2(href='#')
        img(src='/media/icon.png' width=48 height=48)    
      each i in [0, 1, 2]
          li.nav-link: a(href=urls[i])= pages[i]
      if(loggedIn)
          li.nav-link: a(href='/logout')
            i.fa.fa-sign-out.fa-lg
              
mixin newNav(index)
  -
    var pages = [ 'Home', 'Users', 'Article List', 'About'];
    var urls = [ '/', '/list', '/articlelist', '/about' ];
  nav(class='nav navbar-nav navbar-right')
      ul(class='nav nav-pills')
          each i in [0, 1, 2, 3]
              li(class={active: index == i}): a(href=urls[i])= pages[i]
          if(loggedIn)
              li(class='pull-right'): a(href='/logout') Logout
                
mixin nav-links()
  li 
    a(href="/") Home
  li 
    a(href="") Nav 1
  li 
    a(href="") Nav 2
  li 
    a(href="") Nav 3
mixin initFb()
  script.
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '124609491488258',
        xfbml      : true,
        version    : 'v2.10'
      });
      FB.AppEvents.logPageView();
    };

    var js, fjs = document.getElementsByTagName('script')[0];
    if (!document.getElementById('facebook-jssdk')) {
      js = document.createElement('script'); js.id = 'facebook-jssdk';
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10&appId=124609491488258";
      fjs.parentNode.insertBefore(js, fjs);
    }

