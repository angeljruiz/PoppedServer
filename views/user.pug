doctype html
html
    head
        include ../includes/default_page.pug
        +head('Profile')

    body
        .container
            +header(localUsername)
            +navvy(1)
            form(action="/delete/" + localId method='GET' id='delete')
            form(action="saveMessage?" + localId method='POST' id='save')
                input(type='hidden' id='id' name='id' value=localId)

            .btn-toolbar
                a(class='btn btn-primary' href='/list') Back
                input(type='submit' class='btn btn-danger' value='Delete' form='delete')

            .row
                div(class='col-md-1')
                div(class='col-md-4')
                    h2='Username '
                        span(class='label label-primary')= localUsername
                
                div(class='col-md-4 col-md-offset-1')
                    if(owner)
                        textarea(rows=5 cols=65 style='margin-top: 20px; resize: none' form='save' id='message' name='message')
            .row
                div(class='col-md-1 col-md-offset-10')
                    if(owner)
                        input(type='submit' class='btn btn-info' value='Submit' form='save')
                br
                br
            +row(6, 6)
                ul(class='list-group')
                    each message, index in messages
                        li(class='list-group-item text-center')= message.messages

