extends ../includes/layout.pug

append resources
  title Articles
  
append body
  .row
    .col-md-10.offset-md-1
      .card
          h1.card-header Articles
          ul.list-group
          each article in articles
            .card.article
              a(href='/article/' + article.id)
                .card-block
                  img(src='/article/thumbnail/' + article.id width=64 height=64) 
                  strong.ml-2= article.title
                  .text-center.mb-3= article.desc
